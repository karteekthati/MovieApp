<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.movie.MovieFragment">

        <!-- TODO: Update blank fragment layout -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/movie_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            app:title="@string/movie_title"
            app:titleTextColor="@color/white"
            android:text="@string/hello_blank_fragment">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/movie_search"
                android:layout_width="wrap_content"
                style="@style/Widget.AppCompat.Light.SearchView"
                android:gravity="end"
                android:layout_height="wrap_content"></androidx.appcompat.widget.SearchView>
        </com.google.android.material.appbar.MaterialToolbar>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movie_recyclerview"
            android:layout_below="@+id/movie_toolbar"
            tools:listitem="@layout/view_holder_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        <ImageView
            android:id="@+id/imgNodata"
            android:src="@drawable/nodata"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_height="150dp"></ImageView>

    </RelativeLayout>
</layout>