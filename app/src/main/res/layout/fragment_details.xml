<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.kk.movieapp.data.movieDetails.MovieDetails"></import>

            <variable
                name="movieDetails"
                type="MovieDetails" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.details.DetailsFragment">

        <!-- TODO: Update blank fragment layout -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_fragment_appbar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
               <RelativeLayout
                   app:layout_collapseMode="parallax"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <ImageView
                       android:src="@color/black"
                       android:scaleType="fitXY"
                       load="@{movieDetails.poster}"
                       android:layout_width="match_parent"
                       android:layout_height="350dp">
                   </ImageView>
                   <ImageView
                       android:id="@+id/back_press"
                       android:src="@drawable/ic_baseline_arrow_back_24"
                       android:layout_margin="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:tint="@color/white">
                   </ImageView>
                   <TextView
                       style="@style/TextAppearance.AppCompat.Title"
                       android:src="@color/black"
                       android:layout_marginTop="20dp"
                       android:layout_toEndOf="@+id/back_press"
                       android:ellipsize="end"
                       android:maxLines="1"
                       android:text="@{movieDetails.title}"
                       android:hint="Title of the movie"
                       android:textColorHint="@color/white"
                       android:textColor="@color/white"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toRightOf="@+id/back_press">
                   </TextView>
               </RelativeLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="@{movieDetails.title}"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="Year"
                        android:textColor="@color/black"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="@{movieDetails.year}"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="Actors"
                        android:textColor="@color/black"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="@{movieDetails.actors}"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="Awards"
                        android:textColor="@color/black"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="@{movieDetails.awards}"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="Imdb Rating"
                        android:textColor="@color/black"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16dp"
                        android:text="@{movieDetails.imdbRating}"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <ProgressBar
            android:id="@+id/details_progressbar"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ProgressBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>